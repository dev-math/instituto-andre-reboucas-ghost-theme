    function get_viewers_ip(json) {
      const viewers_ip = json.ip;
      count_view(viewers_ip);
    }

    function count_view(viewers_ip) {
      const database = firebase.database();
      const ip_to_string = viewers_ip.replace(/\./g, "-");
      const pageViewsRef = database.ref("page_views/" + ip_to_string).set({
        viewers_ip: viewers_ip,
        timestamp: firebase.database.ServerValue.TIMESTAMP
      });
    }

    function updateViewCount() {
      const database = firebase.database();
      const pageViewsRef = database.ref("page_views");
      pageViewsRef.on("value", (snapshot) => {
        const views = snapshot.numChildren();
        document.getElementById("view_count_text").textContent = views;
      });
      pageViewsRef.onDisconnect().remove();
    }
    updateViewCount();
